<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="217dp"
    android:orientation="vertical"
       android:layout_weight="1.04"
       android:weightSum="1">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="vertical"
          android:background="#ff7994"
          android:weightSum="1"
          android:layout_weight="0.06">
          <ImageView
              android:id="@+id/grid_image"
              android:layout_width="70dp"
              android:layout_height="60dp"
              android:layout_marginLeft="130dp"
              android:layout_marginTop="45dp"
              android:src="@drawable/restaurant" />

          <TextView
           android:id="@+id/grid_text"
           android:layout_width="347dp"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:paddingLeft="35dp"
           android:textSize="18sp"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:text="Learning and sharing are critical elements in establishing one's identity"
           android:layout_weight="0.16" />

        </LinearLayout>

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
            android:orientation="vertical"
           android:weightSum="1"
           android:background="#e1e1e1"
            android:layout_weight="0.88">
               <TextView
               android:id="@+id/grid_text1"
               android:layout_width="371dp"
               android:layout_height="50dp"
               android:paddingTop="10dp"
               android:paddingLeft="20dp"
               android:textSize="20sp"
               android:textColor="#373f4c"
               android:text="Your Choice ->"
               android:layout_weight="0.05"
               android:background="#ffffff"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:background="#ffffff">
            <ImageView
                android:id="@+id/grid_image1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/test_1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/grid_text2"
                android:layout_width="347dp"
                android:layout_height="51dp"
                android:paddingTop="16dp"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#373f4c"
                android:text="Chapter based Model Test"
                android:onClick="onClick"
                android:clickable="true"/>
                <TextView
                    android:layout_width="311dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#878787"
                    android:text="All Subjects chapter based model test are organized here" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="#ffffff">
            <ImageView
                android:id="@+id/grid_image2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/test" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/grid_text3"
                android:layout_width="347dp"
                android:layout_height="51dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#373f4c"
                android:text="Subject based Model Test"
                android:background="#ffffff"
                android:onClick="onClick"
                android:clickable="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:textSize="12sp"
                        android:textColor="#878787"
                        android:text="All Subjects based model test are organized here" />
                </LinearLayout>
            </LinearLayout>
         </LinearLayout>
     </LinearLayout>
</LinearLayout>